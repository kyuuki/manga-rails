<% content_for :title do %>
  タイトル詳細
<% end %>

<p id="notice"><%= notice %></p>

<div class="box">
  <div class="box-header with-order">
    <h3 class="h4">タイトル情報</h3>
  </div>

  <div class="box-body">
    <div class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2 control-label">名前</label>
        <div class="col-sm-5">
          <div class="form-control">
            <%= @title.name %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="box-header with-order">
    <h3 class="h4">本情報</h3>
  </div>

  <div class="box-body table-responsive no-padding">
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th class="col-sm-2"></th>
          <th class="col-sm-5">巻数</th>
          <th class="col-sm-5"></th>
        </tr>
      </thead>
      <tbody>
        <% @title.books.each do |book| %>
          <tr>
            <td></td>
            <td><%= book.volume %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="box-footer">
    <div class="pull-right">
      <%= link_to edit_title_path(@title), class: "btn btn-default" do %>
        <i class="fa fa-edit"></i>&nbsp;編集
      <% end %>
      <%= link_to @title, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
        <i class="fa fa-minus"></i>&nbsp;削除
      <% end %>
    </div>
  </div>
</div>

